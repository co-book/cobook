<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.ebook.cobook.mapper.BoardMapper">

	<select id="listAll" resultType="org.ebook.cobook.editor.domain.BoardVO">
		select * from test_board
		order by bno desc
	</select>

	<insert id="insert">
		insert into test_board values
		(bno_seq.nextval, #{title}, #{writer}, #{content}, sysdate, #{file_url})
	</insert>

	<select id="read" resultType="org.ebook.cobook.editor.domain.BoardVO">
	select * from test_board where bno = #{bno}
	</select>


</mapper>